                    <li>
                        <a href="@Url.Action("Contact", "Home")">CONTACT</a>

                    </li>
                    <li><a href="@Url.Action("Faq", "Home")">FAQ</a></li>
                </ul>
            </nav><!-- /.mainnav -->
        </div><!-- /.nav-wrap -->
