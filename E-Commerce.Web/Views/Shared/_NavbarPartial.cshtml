@model E_Commerce.Web.ViewModels.NavbarViewModel



    <div class="container clearfix" id="site-header-inner">


        <div id="logo" class="logo float-left">
            <a href="@Url.Action("Index", "Home")" title="logo">
                <img src="~/Content/images/livestock.png" alt="image" width="200" height="60" style="background-color:white;">
            </a>
        </div><!-- /.logo -->
        <div class="mobile-button"><span></span></div>
        <ul class="menu-extra">
            <li class="box-search">
                <a class="icon_search header-search-icon" style="color:black;background-color:white;" href="#"></a>
                <form role="search" method="get" class="header-search-form" action="@Url.Action("Index", "Shop")">
